<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

    <Button
        android:id="@+id/challenge_01_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="도전 01. 새 프로젝트 아래쪽에 두 개의 버튼 추가하기"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/challenge_02_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="도전 02. 위, 아래, 중앙의 공간을 차지하는 전형적인 화면 구성하기"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/challenge_01_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>